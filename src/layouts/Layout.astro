---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";

interface Props {
	title?: string;
	description?: string;
}

const {
	title = "GitHub SLA Tracker",
	description = "Track GitHub's SLA compliance and service uptime",
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body>
		<header>
			<div class="container">
				<h1>
					<a href={import.meta.env.BASE_URL}>GitHub SLA Tracker</a>
				</h1>
			</div>
		</header>
		<main>
			<slot />
		</main>
		<footer>
			<div class="container">
				<p>
					Unofficial tracker for educational purposes. Data from <a
						href="https://www.githubstatus.com"
						target="_blank"
						rel="noopener">GitHub Status API</a
					>
				</p>
			</div>
		</footer>
	</body>
</html>
