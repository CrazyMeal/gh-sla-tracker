---
interface Props {
    class?: string;
    [key: string]: any;
}

const { class: className, ...rest } = Astro.props;
---

<div class:list={["card", className]} {...rest}>
    <slot />
</div>

<style>
    .card {
        background-color: var(--color-bg-secondary);
        border: 1px solid var(--color-border);
        border-radius: 6px;
        padding: 1.5rem;
    }
</style>
