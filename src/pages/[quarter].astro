    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .update-item {
    padding: 1rem;
    background-color: var(--color-bg-tertiary);
    border-radius: 4px;
  }

  .update-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .update-status {
    font-weight: 600;
    text-transform: capitalize;
    color: var(--color-link);
  }

  .update-header time {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  .update-body {
    margin: 0;
    line-height: 1.6;
  }
</style>
