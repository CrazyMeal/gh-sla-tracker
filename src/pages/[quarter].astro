    color: var(--color-link);
    margin-bottom: 0.25rem;
  }

  .stat-value.text-sm {
    font-size: 1.5rem;
  }

  .uptime-green {
    color: var(--color-success);
  }

  .uptime-orange {
    color: var(--color-warning);
  }

  .uptime-red {
    color: var(--color-danger);
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  .section-subtitle {
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
  }

  .component-sla {
    margin-bottom: 3rem;
  }

  .component-sla h2 {
    font-size: 1.75rem;
    margin-bottom: 0.5rem;
  }

  .table-wrapper {
    overflow-x: auto;
  }

  .uptime-value {
    font-weight: 600;
    font-family: var(--font-mono);
  }

  .service-credit {
    font-weight: 600;
    color: var(--color-warning);
  }

  .text-secondary {
    color: var(--color-text-secondary);
  }

